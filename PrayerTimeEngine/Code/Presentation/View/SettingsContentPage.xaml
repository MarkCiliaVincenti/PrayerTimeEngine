<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrayerTimeEngine.Code.Presentation.View.SettingsContentPage">
    
    <Grid Padding="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label 
            Grid.Row="0"
            Text="Calculation Source"
            IsVisible="{Binding ShowCalculationSourcePicker}"/>
        <Picker 
            Grid.Row="1"
            x:Name="CalculationSourcePicker"
            SelectedItem="{Binding SelectedCalculationSource, Mode=TwoWay}"
            ItemsSource="{Binding CalculationSources}" 
            IsVisible="{Binding ShowCalculationSourcePicker}"
            SelectedIndex="0"/>

        <Label 
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Text="Minute Adjustment"/>
        <Picker 
            Grid.Row="1"
            Grid.Column="2"
            SelectedItem="{Binding SelectedMinuteAdjustment, Mode=TwoWay}"
            ItemsSource="{Binding MinuteAdjustments}" 
            SelectedIndex="0"/>
        
        <Label 
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Text="Shown:"/>
        <CheckBox 
            Grid.Row="3"
            IsChecked="{Binding IsTimeShown}"
            IsEnabled="{Binding IsTimeShownCheckBoxEnabled}"/>

        <Line 
            Grid.Row="4"
            Grid.ColumnSpan="4"
            X1="0"
            Y1="10"
            X2="350"
            Y2="10"
            Stroke="White" />

        <StackLayout 
            Grid.Row="5"
            Grid.ColumnSpan="2"
            x:Name="ConfigurableUIContainer" />

    </Grid>
</ContentPage>
